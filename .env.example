# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
ADMIN_USER_ID=your_telegram_user_id

# Monitoring Configuration
FAILURE_THRESHOLD=3
RECOVERY_THRESHOLD=2
TZ=UTC
REPORT_HOUR=9
REPORT_MINUTE=0
REQUEST_RETRIES=1
REQUEST_BACKOFF=0.5

# Database Configuration (optional, SQLite by default)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/dbname

# ML / Analytics
ML_ENABLED=true
ML_WINDOW=200
ML_COMPUTE_INTERVAL_MINUTES=10
ANOMALY_COOLDOWN_MINUTES=30

# M-of-N filter and sensitivity tuning
ANOMALY_M=3
ANOMALY_N=5
ANOMALY_SENSITIVITY=1.5
ANOMALY_PCT_FACTOR=1.0
ANOMALY_ERROR_RATE_THRESHOLD=0.1

# Quiet hours and downtime reminders
QUIET_HOURS_ENABLED=true
QUIET_START_HOUR=22
QUIET_END_HOUR=7
DOWNTIME_REMINDER_MINUTES=30

# Charts / Visualization
# Matplotlib style name (examples: seaborn-v0_8-darkgrid, ggplot, fast)
CHART_STYLE=seaborn-v0_8-darkgrid
# Y scale: log | linear | auto
CHART_Y_SCALE=log
# Show control limit and EWMA overlays
CHART_SHOW_UCL=true
CHART_SHOW_EWMA=true
CHART_EWMA_ALPHA=0.3
# Which percentiles to draw as dashed lines (comma separated) or leave empty
CHART_SHOW_PERCENTILES=50,90,95
# Mark failed requests with X markers
CHART_MARK_FAILURES=true
# Downsample points: show each N-th successful ping point (failures and anomalies are always shown)
CHART_POINT_EVERY=5
# Explicitly mark anomalies (above UCL) with orange circles
CHART_MARK_ANOMALIES=true
# Additionally draw thin raw line of all values behind points
CHART_SHOW_RAW_LINE=true
# Figure size (WxH) and DPI
CHART_SIZE=12x6.5
CHART_DPI=120

# Aggregation strategy: per_minute | lttb | none | auto
CHART_AGGREGATION=per_minute
CHART_LTTB_POINTS=240

# Data retention and metrics
RETENTION_DAYS=90
METRICS_PORT=8080
